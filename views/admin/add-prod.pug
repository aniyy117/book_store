extends ../layout/layout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        form.product-form(action="/admin/add-product", method="POST")
            .form-control
                label(for="title") Title
                input(type="text", name="title")#titlez
                label(for="image_url") Image Url
                input(type="text", name="image_url")#title
                label(for="title") Price of Book
                input(type="number", name="price" step=0.01)#title
                label(for="description") Description
                textarea(name="description", cols="30", rows="10")#description
            button.btn(type="submit") Add Product